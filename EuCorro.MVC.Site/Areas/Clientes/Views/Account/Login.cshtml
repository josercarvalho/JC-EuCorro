@model EuCorro.Security.Models.LoginViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    @if (TempData["SuccessMail"] != null)
    {
        <div class="alert alert-info alert-dismissable fade in" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="text-center">A T E N Ç Ã O !!!</h4>
            <p>
                E-mail enviado com sucesso. <br />
                Verifique seu e-mail, caso não esteja em Caixa de Entrada, veja no Lixo Eletrônico, ou Caixa de Span.
            </p>
        </div>
    }

    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "caixa-box", role = "form", id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-6 caixa_container bs-component">
                <h4>Entrar</h4>
                <hr />
                <div class="form-horizontal well">
                    @*@Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })*@
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-offset-2 col-md-10">
                        <div class="form-group">
                            &nbsp;&nbsp;
                            <button type="submit" class="btn btn-primary btn-flat">Entrar</button>
                            &nbsp;&nbsp;
                            <label style="margin-top:10px;">
                                @Html.ActionLink("Esqueci minha senha", "ForgotPassword", "Account")
                            </label>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                &nbsp;&nbsp;
                                &nbsp;&nbsp;
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="caixa_container col-md-6">
                <h4>Não possui cadastro?</h4>
                <hr />
                <div style="margin-top: 30px; margin-bottom: 25px; text-align: center;">
                    <a href="@Url.Action("Register", "Account")" data-toggle="" class="btn btn-large btn-danger">
                        Cadastre-se gratuitamente agora
                    </a>
                </div>

                <blockquote>
                    <p>Uma empresa de Assessoria Esportiva, Realização e Organização de Eventos Esportivos.</p>
                    <small>EuCorro</small>
                </blockquote>
                <br />
                <br />
                <div class="logos text-right">
                    @*<img src="~/img/Logo-EuCorro.jpg" class="img-thumbnail" height="50" title="EuCorro Eventos Esportivos" />*@
                    <a href="http://www.facebook.com/JCarvalhoInformatica" target="_blanck" title="JCarvalho TI">
                        <img src="~/img/JC-Logo.png" class="img-thumbnail" width="100" height="100" title="Desenvolvido por JCarvalho TI" />
                    </a>
                </div>
            </div>
        </div>
    }
</body>
</html>
