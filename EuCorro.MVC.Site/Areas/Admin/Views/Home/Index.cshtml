@model EuCorro.MVC.Site.ViewModels.IndexHomeViewModel

@{
    ViewBag.Title = "Sistema Gestor de Eventos - EUCORRO ";
    ViewBag.TitleSmall = "Version 1.0";
}

<!-- Info boxes -->
<session class="box" id="Main">
    <div class="col-lg-3 col-xs-6">
        <div class="small-box bg-green">
            <div class="inner">
                <h3>@Model.TotalDeAtletas</h3>
                <p>Atletas cadastrados</p>
            </div>
            <div class="icon">
                <i class="ion ion-person-add"></i>
            </div>
            @*<a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>*@
        </div>
    </div>
    <div class="col-lg-3 col-xs-6">
        <div class="small-box bg-aqua">
            <div class="inner">
                <h3>@Model.InscricoesRealizadas</h3>
                <p>Inscrições Realizadas</p>
            </div>
            <div class="icon">
                <i class="ion ion-stats-bars"></i>
            </div>
            @*<a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>*@
        </div>
    </div>
    <div class="col-lg-3 col-xs-6">
        <div class="small-box bg-yellow">
            <div class="inner">
                <h3>@Model.EventosRealizados</h3>
                <p>Eventos Realizados</p>
            </div>
            <div class="icon">
                <i class="ion ion-ios-heart-outline"></i>
            </div>
            @*<a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>*@
        </div>
    </div>
    <div class="col-lg-3 col-xs-6">
        <div class="small-box bg-red">
            <div class="inner">
                <h3>@Model.InscricoesAbertas</h3>
                <p>Eventos Futuros</p>
            </div>
            <div class="icon">
                <i class="ion ion-ios-pricetag-outline"></i>
            </div>
            @*<a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>*@
        </div>
    </div>

    <div class="col-md-12">
        <div class="box box-warning">
            <div class="box-header with-border">
                <h3 class="box-title">EuCorro Eventos Esportivos</h3>
                <div class="box-tools pull-right">
                    <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    @*<button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>*@
                </div>
            </div><!-- /.box-header -->
            <div class="box-body">
                <div class="">
                    <div class="col-md-6">
                        <div class="nav pull-left">
                            <ol class="round">
                                <li class="one">
                                    Cadastro de Eventos.
                                    <h5>Controle dos Eventos e Resultados.</h5>
                                </li>

                                <li class="two">
                                    Cadastros e Controle de Atletas e Inscrições.
                                    <h5>Controle de Inscrições.</h5>
                                </li>
                                <li class="three">
                                    Painel Administrtivo do Site.
                                    <h5>Cadastro de Fotos nas Galerias, Parceiro, Clientes e Portifólio.</h5>
                                </li>
                            </ol>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="nav text-center">
                            <span>
                                <img src="~/img/Logo-topo.jpg" class="img-thumbnail" height="170" width="200" />
                            </span>
                        </div>
                    </div><!-- /.col -->
                    <!-- /.col -->
                </div><!-- /.row -->
            </div><!-- ./box-body -->
            <div class="box-footer">
                @*<div class="row">
                        <div class="col-sm-12">
                            <p class="text-center">
                                <h5>
                                    Uma empresa de Assessoria Esportiva, Realização e Organização de Eventos Esportivos.
                                </h5>
                            </p>
                        </div>
                    </div>*@<!-- /.row -->
            </div><!-- /.box-footer -->
        </div><!-- /.box -->
    </div><!-- /.col -->
</session>
<!-- /.row -->

@section scripts {
    @*<script src="~/Scripts/AdminLTE/pages/dashboard2.js"></script>*@
    @*<script src="~/Scripts/AdminLTE/demo.js"></script>*@
}
