                                @Html.EditorFor(model => model.PercursoImg, new { htmlAttributes = new { @class = "form-control", @data_bind = "" } })
                                @Html.ValidationMessageFor(model => model.PercursoImg, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @*<div class="form-group">
                            @Html.LabelFor(model => model.DataCadastro, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.DataCadastro, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DataCadastro, "", new { @class = "text-danger" })
                            </div>
                        </div>*@
                    </div>

                    <div id="foreach-binding" class="table-responsive">
                        <table class="table table-hover">
                            <thead class="bg-light-blue-gradient">
                                <tr>
                                    <th colspan="6"><span>PREÇOS</span></th>
                                </tr>
                            </thead>
                            <tbody data-bind="foreach: precos">
                                <tr>
                                    <td>
                                        @Html.TextBox("DataIni", null, new { @class = "form-control date", @data_binde = "DataIni", @nome = "DataIni", @placeholder = "Aparti do dia" })
                                    </td>
                                    <td>
                                        @Html.TextBox("HoraIni", null, new { @class = "form-control timepicker", @name = "HoraIni", @data_bind = "value: HoraIni", @placeholder = "Hora Início" })
                                    </td>
                                    <td>
                                        @Html.TextBox("DataFim", null, new { @class = "form-control date", @data_binde = "DataFim", @nome = "DataFim", @placeholder = "Data Final" })
                                    </td>
                                    <td>
                                        @Html.TextBox("HoraFim", null, new { @class = "form-control timepicker", @name = "HoraFim", @data_bind = "value: HoraFim", @placeholder = "Encerramento" })
                                    </td>
                                    <td>
                                        @Html.TextBox("Valor", null, new { @class = "form-control dinheiro", @name = "Valor", @data_bind = "value: Valor", @placeholder = "Valor" })
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-danger" data-bind="click: excluiPreco">EXCLUIR</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div>
                            <button class="btn btn-default" data-bind='click: addModalidadePreco' title="Adicionar Preço"><i class="fa fa-plus"></i> Preço</button>
                        </div>
                    </div>
                }
            </div>
            <div id="msgErroModalidade" class="alert alert-danger hide text-center"><small><span></span></small></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="button" id="salvarModalidade" class="btn btn-primary salvarModalidade">Salvar</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
