@model EuCorro.Domain.Models.ModalidadeEvento
<!-- Modal -->
<div class="modal fade bs-modal-lg" id="modalidadeModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="modalidadeModalLabel">Modalidade</h4>
            </div>

            <div class="modal-body">

                @using (Html.BeginForm())
                {
                    <div class="form-inline" id="form-modalidade">

                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.LabelFor(model => model.EventoId, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.EventoId, new { htmlAttributes = new { @class = "form-control", @data_bind="" } })
                                @Html.ValidationMessageFor(model => model.EventoId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ModalidadeEventoId, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ModalidadeEventoId, new { htmlAttributes = new { @class = "form-control", @data_bind = "" } })
                                @Html.ValidationMessageFor(model => model.ModalidadeEventoId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Reverzamento, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.Reverzamento, new { htmlAttributes = new { @class = "form-control", @data_bind = "" } })
                                    @Html.ValidationMessageFor(model => model.Reverzamento, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group equipe">
                            @Html.LabelFor(model => model.AtletasPorEquipe, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.AtletasPorEquipe, new { htmlAttributes = new { @class = "form-control", @data_bind = "" } })
                                @Html.ValidationMessageFor(model => model.AtletasPorEquipe, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Vagas, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Vagas, new { htmlAttributes = new { @class = "form-control", @data_bind = "" } })
                                @Html.ValidationMessageFor(model => model.Vagas, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.NumeroInicial, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.NumeroInicial, new { htmlAttributes = new { @class = "form-control", @data_bind = "" } })
                                @Html.ValidationMessageFor(model => model.NumeroInicial, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.NumeroFinal, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.NumeroFinal, new { htmlAttributes = new { @class = "form-control", @data_bind = "" } })
                                @Html.ValidationMessageFor(model => model.NumeroFinal, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.IdadeMin, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.IdadeMin, new { htmlAttributes = new { @class = "form-control", @data_bind = "" } })
                                @Html.ValidationMessageFor(model => model.IdadeMin, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.IdadeMax, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.IdadeMax, new { htmlAttributes = new { @class = "form-control", @data_bind = "" } })
                                @Html.ValidationMessageFor(model => model.IdadeMax, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Percurso, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Percurso, new { htmlAttributes = new { @class = "form-control", @data_bind = "" } })
                                @Html.ValidationMessageFor(model => model.Percurso, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.PercursoImg, htmlAttributes: new { @class = "control-label col-md-2" })
