@model EuCorro.MVC.Site.ViewModels.EventoViewModel

@{
    ViewBag.Title = "Eventos";
    var imgBanner = Url.Content("~/Uploads/Banners/");
    @*@Styles.Render("~/jasny-bootstrap/css")*@
}

@section Menu {
    @Scripts.Render("~/Scripts/Evento/menu")
}

<style>
    page-background img {
        position: fixed;
        padding: 60px;
        /*padding-top: 60px;*/
        top: 60px;
        left: 0;
        height: 100%;
        width: 100%;
        background-size: cover;
        opacity: .6;
    }

    .page-background::after {
        content: '';
        position: absolute;
        top: 400px;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #f9f9f9;
    }

    .event-page, .enroll-page {
        position: relative;
        z-index: 1;
        padding-top: 65px;
    }

    .row.event-header {
        box-shadow: 0 -10px 35px -15px #000;
        margin-bottom: 25px;
    }

    .event-cover {
        margin: 0 -7.5px;
        height: 350px;
    }

        .event-cover img {
            height: 100%;
            width: 100%;
        }

    .event-infos {
        margin: 0 -7.5px;
        position: relative;
        padding: 30px;
        height: 350px;
        background-color: #fff;
    }

    .event-location {
        list-style: none;
        padding: 0;
    }

        .event-location li {
            display: table;
            padding-bottom: 10px;
            font-size: 15px;
        }

        .event-location i, .event-location p {
            display: table-cell;
            vertical-align: middle;
        }

        .event-location i {
            text-align: left;
            width: 30px;
        }

        .event-location .event-date label {
            display: inline-block;
            margin-left: 10px;
        }

    .event-name {
        padding-bottom: 30px;
        font-size: 22px;
        font-weight: 700;
        text-transform: uppercase;
    }

    .event-address a {
        font-size: 12px;
        font-weight: 200;
        padding-left: 5px;
    }

    .event-actions {
        position: absolute;
        bottom: 30px;
        left: 30px;
        width: calc(100% - 60px);
    }

        .event-actions > b {
            display: inline-block;
            padding-left: 5px;
            margin-top: 5px;
            color: #CB4335;
            font-weight: 700;
        }

        .event-actions .social-share {
            margin-bottom: -15px;
            padding-top: 10px;
        }

    .event-complete-info {
        border: 2px solid #f0f0f0;
    }

    .modality-icon {
        height: 65px;
        margin: 2px;
        line-height: 35px;
        font-size: 25px;
        color: #fff;
        background-color: #516395;
    }

    .modality-name {
        position: relative;
        width: calc(100% - 4px);
        min-height: 110px;
    }

        .modality-name span {
            padding: 25px;
            font-weight: 700;
            text-align: center;
            text-transform: uppercase;
            line-height: 1.1;
            font-size: 18px;
            font-style: normal;
            color: #fff;
        }

        .modality-name .modality-distance {
            position: absolute;
            bottom: 0px;
            left: 0;
            padding: 5px 6px;
            background-color: #fff;
            color: #666;
            font-size: 15px;
            display: inline-block;
            height: 20px;
            line-height: 15px;
        }

    .modality-name {
        display: table;
        color: white;
    }

    #modalities.tab-pane .modality-name span {
        display: table-cell;
        vertical-align: middle;
    }

    .modality-actions {
        margin-top: 30px;
    }

    .enroll-btn {
        margin-top: 10px;
    }

    .modality-description {
        text-overflow: ellipsis;
        white-space: normal;
        overflow: hidden;
    }

        .modality-description span {
            padding: 10px 0;
        }

        .modality-description[data-readmore] {
            -webkit-transition: all .3s;
            -moz-transition: all .3s;
            -ms-transition: all .3s;
            -o-transition: all .3s;
            transition: all .3s;
        }

            .modality-description[data-readmore][aria-expanded="false"] {
                box-shadow: inset 0 -4px 8px -7px #000;
            }

    .modality-price {
        margin: 15px -15px;
        width: calc(100% + 30px);
        padding: 15px;
        text-align: center;
        font-weight: 700;
        font-size: 20px;
        background-color: #f9f9f9;
    }

    .modality-infos [data-readmore-toggle] {
        display: block;
        text-align: center;
        color: #666;
    }

    .modality-item {
        border: 2px solid #f0f0f0;
        box-shadow: none;
        -webkit-transition: all .4s;
        -moz-transition: all .4s;
        -ms-transition: all .4s;
        -o-transition: all .4s;
        transition: all .4s;
    }

        .modality-item:hover {
            border-color: #666;
        }

    .modality-price {
        margin: 15px -15px;
        width: calc(100% + 30px);
        padding: 15px;
        text-align: center;
        font-weight: 700;
        font-size: 20px;
        background-color: #f9f9f9;
    }

    .innerAll {
        padding: 15px;
        position: relative;
    }
</style>


@*<div class="page-background"><img src="@imgBanner@Model.Evento.BannerEvento" alt="@Model.Evento.Nome"></div>*@


<div class="body-content-sub">
    @*<div class="text-justify">
            <h3 class="subtitle">@Model.Evento.Nome</h3>
        </div>*@

    <div class="container">
        <section id="event-header">
            @*<div class="row caixa-box">*@
            <div class="col-md-8">
                <div class="event-cover">
                    <img alt="@Model.Evento.Nome" class="img-responsive" src="@imgBanner@Model.Evento.BannerEvento">
                </div>
            </div>
            <div class="col-md-4">
                <h4 class="event-name">@Model.Evento.Nome</h4>
                <ul class="event-location">
                    <li>
                        <i class="fa fa-calendar fa-fw"></i>
                        <p>@Model.Evento.DataEvento.ToShortDateString()</p>
                    </li>
                    <li>
                        <i class="fa fa-clock-o fa-fw"></i>
                        <p>@Model.Evento.HoraEvento</p>
                    </li>
                    <li>
                        <i class="fa fa-map-o fa-fw"></i>
                        <p>@Model.Evento.Endereco</p>
                    </li>
                </ul>
                <div class="text-center ">
                    <a class="btn btn-lg btn-block btn-oranger" id="enrollment-button" rel="nofollow" href="#">Inscreva-se</a>
                    <b><span style="color: #e32e0e;">Inscrições disponíveis até @Model.Evento.DataEncerramento.ToShortDateString() ou até se esgotarem as vagas</span></b>
                </div>
            </div>
            @*</div>*@
        </section>
        <hr />
        <section id="event-body">
            <div class="row">
                @*<div class="caixa-box event-page">*@
                <div class="container-fluid">
                    <ul class="nav nav-tabs nav-justified">
                        <li class="active"><a href="#tab1" data-toggle="tab"><span class="text-bold">INFORMAÇÕES GERAIS</span></a></li>
                        <li><a href="#tab2" data-toggle="tab"><span class="text-bold">MODALIDADES</span></a></li>
                        <li><a href="#tab3" data-toggle="tab"><span class="text-bold">REGULAMENTO</span></a></li>
                        <li><a href="#tab4" data-toggle="tab"><span class="text-bold">RESULTADO</span></a></li>
                        <li><a href="#tab5" data-toggle="tab"><span class="text-bold">FOTOS</span></a></li>
                    </ul>
                    <br />
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane fade in active" id="tab1">
                            <section id="InforGerais">
                                <div class="col-md-7">
                                    <blockquote>
                                        <h5>
                                            @Model.Evento.DescricaoEvento
                                        </h5>
                                    </blockquote>
                                </div>
                                <div class="col-md-4 col-md-offset-1">
                                    <blockquote>
                                        <small class="text-justify">
                                            Atletas com mais de 60 anos terão o desconto de 50% calculado ao final do processo de inscrição nas modalidades que possuem o benefício.
                                        </small>
                                        <hr />
                                        <h4 class="strong">Formas de pagamento</h4>
                                        <ul>
                                            <li>
                                                <h5>Cartão de crédito</h5>
                                                <i class="fa fa-2x fa-credit-card"></i>
                                                <i class="fa fa-2x fa-cc-diners-club"></i>
                                                <i class="fa fa-2x fa-cc-mastercard"></i>
                                                <i class="fa fa-2x fa-cc-visa"></i>
                                                <i class="fa fa-2x fa-cc-paypal"></i>
                                            </li>
                                            <li>
                                                <h5>Boleto - Disponível até <b>@Model.Evento.DataEncerramento.ToShortDateString()</b></h5>
                                                <i class="fa fa-3x fa-barcode"></i>
                                            </li>
                                        </ul>
                                    </blockquote>
                                </div>
                            </section>
                        </div>
                        <div role="tabpanel" class="tab-pane fade in " id="tab2">
                            <section id="Modalidade">
                                <blockquote>

                                    <div class="table-responsive">
                                        <table class="table table-striped table-hover">
                                            <thead class="bg-info">
                                                <tr>
                                                    <th>Modalidade</th>
                                                    <th>Distância</th>
                                                    <th>Valor</th>
                                                    <th>&nbsp;</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.Modalidades)
                                                    {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Nome)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Distancia)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Valor)
                                                        </td>
                                                        <td>
                                                            @Html.ActionLink(" Inscreva-se ", "Index", "Inscricao", new { @id = item.Id }, new { area = "Cliente", @class = "btn btn-oranger", @Title = "Increva-se aqui" })
                                                        </td>
                                                    </tr>
                                                    }

                                            </tbody>
                                        </table>
                                    </div>

                                </blockquote>
                            </section>
                        </div>
                        <div role="tabpanel" class="tab-pane fade in " id="tab3">
                            <section id="regulamento">
                                <blockquote>
                                    regulamento
                                </blockquote>
                            </section>
                        </div>
                        <div role="tabpanel" class="tab-pane fade in " id="tab4">
                            <section id="entregaKit">
                                <blockquote>
                                    entrega de kits
                                </blockquote>
                            </section>
                        </div>
                        <div role="tabpanel" class="tab-pane fade in " id="tab5">
                            <section id="entregaKit">
                                <blockquote>
                                    <img alt="@Model.Evento.Nome" class="img-responsive img-thumbnail" src="@imgBanner@Model.Evento.BannerEvento">&nbsp;
                                    <img alt="@Model.Evento.Nome" class="img-responsive img-thumbnail" src="@imgBanner@Model.Evento.BannerPatrocinio">&nbsp;
                                    <img alt="@Model.Evento.Nome" class="img-responsive img-thumbnail" src="@imgBanner@Model.Evento.ImagemKit">
                                </blockquote>
                            </section>
                        </div>
                    </div>
                </div>
                @*</div>*@
            </div>
        </section>
    </div>
</div>

