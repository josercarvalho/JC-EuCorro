    @Html.Partial("_SobreBotton")
</section>

@section scripts {
    <link href="~/Content/isotope.css" rel="stylesheet" />
    <link href="~/Content/jquery.fancybox.min.css" rel="stylesheet" />
    @Scripts.Render("~/isotope/css")
    @Scripts.Render("~/isotope/js")

}