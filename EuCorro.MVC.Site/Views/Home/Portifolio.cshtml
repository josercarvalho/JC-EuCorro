@{
    ViewBag.Title = "Potifolio";
}

@section Menu {
    @Scripts.Render("~/Scripts/Portifolio/menu")
}

<div class="body-content-sub">
    <h3 class="subtitle">PORTIFÓLIO</h3>
    <section class="filter-section">
        <div class="row">
            <div class="col-sm-12 col-xs-12">
                <div class="filter-container isotopeFilters">
                    <ul class="list-inline filter">
                        <li class="active"><a href="#" data-filter="*">TODOS </a><span>/</span></li>
                        <li><a href="#" data-filter=".aluguel">ALUGUÉIS</a></li>
                        <li><a href="#" data-filter=".service">SERVIÇOS</a><span>/</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <section class="portfolio-section port-col">
        <div class="row">
            <div class="isotopeContainer">

                <div class="col-sm-3 isotopeSelector service">
                    <article class="">
                        <figure class="box">
                            <a data-fancybox="group-service" data-src="#triathlonID" href="javascript:;">
                                <div class="zoom">
                                    <img src="~/img/triathlon.png" class="imgBox" />
                                    <div class="zoom-icon"></div>
                                </div>
                            </a>
                            <div class="article-title">Triathlon</div>
                        </figure>
                    </article>
                </div>

                <div class="col-sm-3 isotopeSelector service">
                    <article class="">
                        <figure class="box">
                            <a data-fancybox="group-service" data-src="#moutainID" href="javascript:;">
                                <div class="zoom">
                                    <img src="~/img/moutain.png" class="imgBox" />
                                    <div class="zoom-icon"></div>
                                </div>
                            </a>
                            <div class="article-title">Moutain Bike (MTB)</div>
                        </figure>
                    </article>
                </div>

                <div class="col-sm-3 isotopeSelector service">
                    <article class="">
                        <figure class="box">
                            <a data-fancybox="group-service" data-src="#duathlonID" href="javascript:;">
                                <div class="zoom">
                                    <img src="~/img/duathlon.png" class="imgBox" />
                                    <div class="zoom-icon"></div>
                                </div>
                            </a>
                            <div class="article-title">Duathlon Terrestre</div>
                        </figure>
                    </article>
                </div>

                <div class="col-sm-3 isotopeSelector service">
                    <article class="">
                        <figure class="box">
                            <a data-fancybox="group-service" data-src="#corridaID" href="javascript:;">
                                <div class="zoom">
                                    <img src="~/img/corridaderua.png" class="imgBox" />
                                    <div class="zoom-icon"></div>
                                </div>
                            </a>
                            <div class="article-title">Corrida de Rua</div>
                        </figure>
                    </article>
                </div>

                <div class="col-sm-3 isotopeSelector service">
                    <article class="">
                        <figure class="box">
                            <a data-fancybox="group-service" data-src="#ciclismoEstradaID" href="javascript:;">
                                <div class="zoom">
                                    <img src="~/img/ciclismo.png" class="imgBox" />
                                    <div class="zoom-icon"></div>
                                </div>
                            </a>
                            <div class="article-title">Ciclismo de Estrada</div>
                        </figure>
                    </article>
                </div>

                <div class="col-sm-3 isotopeSelector service">
