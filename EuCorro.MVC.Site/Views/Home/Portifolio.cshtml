                            <a data-fancybox="group-service" data-src="#aguathlonID" href="javascript:;">
                                <div class="zoom">
                                    <img src="~/img/aguathlon.png" class="imgBox" />
                                    <div class="zoom-icon"></div>
                                </div>
                            </a>
                            <div class="article-title">Aquathlon</div>
                        </figure>
                    </article>
                </div>

                <div class="col-sm-3 isotopeSelector aluguel">
                    <article class="">
                        <figure class="box">
                            <a data-fancybox="group-aluguel" data-caption="Placa de sinalização" data-src="@Url.Content("~/img/pra3.png")" data-width="600" data-height="400">
